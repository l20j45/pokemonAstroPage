---
import type { PokemonSingleInterface } from '../../interfaces/pokemon-Single.response';

interface Props {
    urlPokemon: string
}
const {urlPokemon} = Astro.props
const resp = await fetch(urlPokemon);
const data = (await resp.json()) as PokemonSingleInterface;


---

<div class="rounded border flex flex-col justify-center items-center p-2">
    {
<img src={data.sprites.back_default} alt={data.name}>
<a href=`pokemons/${data.name}` class="capitalize text-blue-500">{data.name}</a>

    }
    
    
</div>